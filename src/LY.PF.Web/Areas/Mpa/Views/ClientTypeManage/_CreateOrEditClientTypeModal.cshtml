
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using LY.PF.Web.Areas.Mpa.Models.Common.Modals
@using LY.PF.Web.Areas.Mpa.Models.ClientTypeManage

@model CreateOrEditClientTypeModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditClientType") + ": " + Model.ClientType.ClientTypeName) : L("CreateClientType")))


<!--html代码区域-->
<div class="modal-body">
    <form name="clientTypeInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.ClientType.Id" />
 <div class="row">
            <!--<div class="alert alert-info fs16 bold mt10">分节标题</div>-->
            
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-2 control-label hidden">@L("Id")</label>
                        <div class="col-sm-10">
                            <input class="" type="hidden" id="Id" name="Id" value="@Model.ClientType.Id" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("ClientTypeName")<span style="color:red">(*)</span></label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="ClientTypeName" name="ClientTypeName" maxlength="64" value="@Model.ClientType.ClientTypeName"  required/>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("IsValid")</label>
                        <div class="col-sm-8">
                            <select  id="IsValid" name="IsValid" class="form-control required">
                                <option value="true">正常</option>
                                <option value="false">禁用</option>
                            </select>
                            @*<input class="form-control inline w300  maxlength-handler " type="text" id="IsValid" name="IsValid" value="@Model.ClientType.IsValid" />*@
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("Remark")</label>
                        <div class="col-sm-8">
                            <textarea class="form-control " rows="3" id="Remark" name="Remark" maxlength="512" value="@Model.ClientType.Remark" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label hidden">@L("CreateBy")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler hidden  disabled" type="text" id="CreateBy" name="CreateBy" maxlength="32" value="@Model.ClientType.CreateBy" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label hidden">@L("CreationTime")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler hidden  disabled" type="text" id="CreationTime" name="CreationTime" value="@Model.ClientType.CreationTime" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label hidden">@L("UpdateBy")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler hidden  disabled" type="text" id="UpdateBy" name="UpdateBy" maxlength="32" value="@Model.ClientType.UpdateBy" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" hidden>@L("UpdateTime")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler hidden  disabled" type="text" id="UpdateTime" name="UpdateTime" value="@Model.ClientType.UpdateTime" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 

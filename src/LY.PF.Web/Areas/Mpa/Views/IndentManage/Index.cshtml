@using Abp.Web.Mvc.Extensions
@using LY.PF.Indents.Authorization
@{
    ViewBag.CurrentPageName = IndentAppPermissions.Indent;
    ViewBag.Title = L("Indent");

}

@section Styles{

    <link href="~/libs/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}


@* 注入所需JS *@
@section Scripts
{
    <script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/libs/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/libs/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

    @Html.IncludeScript("~/Areas/Mpa/Views/IndentManage/_CreateOrEditIndentModal.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/IndentManage/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Indent")</span> <small>@L("IndentHeaderInfo")</small>
                </h1>
            </div>

        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @if (IsGranted(IndentAppPermissions.Indent_CreateIndent))
        {
            <button id="CreateNewIndentButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateIndent")</button>
            <button id="ExportToExcelButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("ExportToExcel")</button>

        }
    </div>
</div>

<div class="portlet light">
    @* 通用搜索功能 *@
    <div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="IndentsTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetIndentsButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="portlet-body">
        <div id="IndentsTable"></div>
    </div>
</div>










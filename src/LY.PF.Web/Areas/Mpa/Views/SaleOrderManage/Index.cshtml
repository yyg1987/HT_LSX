@using Abp.Web.Mvc.Extensions
@using LY.PF.SaleOrders.Authorization
@{
    ViewBag.CurrentPageName = SaleOrderAppPermissions.SaleOrder;
    ViewBag.Title = L("SaleOrder");

}

@section Styles{

    <link href="~/libs/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}


@* 注入所需JS *@
@section Scripts
{
    <script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/libs/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/libs/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

    @Html.IncludeScript("~/Areas/Mpa/Views/SaleOrderManage/_CreateOrEditSaleOrderModal.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/SaleOrderManage/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("SaleOrder")</span> <small>@L("SaleOrderHeaderInfo")</small>
                </h1>
            </div>

        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @if (IsGranted(SaleOrderAppPermissions.SaleOrder_CreateSaleOrder))
        {
            <button id="CreateNewSaleOrderButton" class="btn btn-primary blue hidden" ><i class="fa fa-plus" ></i> @L("CreateSaleOrder")</button>
            <button id="ExportToExcelButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("ExportToExcel")</button>

        }
    </div>
</div>

<div class="portlet light">
    @* 通用搜索功能 *@
    <div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="SaleOrdersTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetSaleOrdersButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row custom-btn-row">
        <div class="col-sm-12">
            @if (IsGranted(SaleOrderAppPermissions.SaleOrder_CreateSaleOrder))
            {
                <button class="btn btn-sm btn-success" type="button" onclick="addfunc();"><span class="glyphicon glyphicon-plus" />添加</button>
            }
        </div>
    </div>

    <div class="row">
        <div id="addPanel" class="col-md-12">

        </div>
    </div>
    <div id="ItemTemplate" hidden>
        <form target="hideIframe" class="form-inline" enctype="multipart/form-data" action="/Mpa/SaleOrderManage/Upload" method="post" style="margin-top:5px;">
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="isOverride" /> 覆盖
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label for="ProductType">@L("ProductType")</label>
                <select id="ProductType" name="ProductType" class="form-control bs-select" data-live-search="true">
                    @foreach (var item in ViewBag.ProductTypes)
                    {
                        <option value="@item.Value" @(item.IsSelected ? "selected=\"selected\"" : "")>@item.DisplayText</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">@L("ProductName")</label>
                <div class="col-sm-8">
                    <input class="form-control inline w300  maxlength-handler " type="text" id="ProductName" name="ProductName" maxlength="64"  />
                    <span class="help-inline"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="col-sm-3 colspan-xs-3 control-label">@L("Remark")</label>
                    <div class="col-sm-8 colspan-xs-8 clearfix">
                        <input class="form-control inline w300  maxlength-handler " type="text" id="Remark" name="Remark" maxlength="1024" />
                        <span class="help-inline"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">@L("Status")</label>
                <div class="col-sm-8">
                    <select id="Status" name="Status" class="form-control required">
                        <option value="0">正常</option>
                        <option value="1">禁用</option>
                    </select>
                    <span class="help-inline"></span>
                </div>
            </div>

            <div class="form-group">
                <!--添加accpet = ".apk"后窗口打开很慢-->
                <input type="file" class="form-control required" name="myfile" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-success" flagSubmit>提交</button>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-sm btn-danger" flagCancel>取消</button>
            </div>
            <div class="form-group">
                <span style="padding:8px;" flagOutput></span>
            </div>
            <iframe name="hideIframe" hidden></iframe>

            <div class="progress form-group">
                <div class="bar"></div>
                <div class="percent">0%</div>
            </div>
        </form>
    </div>


    <div class="portlet-body">
        <div id="SaleOrdersTable"></div>
    </div>
</div>









